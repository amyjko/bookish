rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /images/{bookID}/{images=**} {
      // Allow anyone to read any image
      allow read: if true
      // Allow users to modify them if they have permissions to edit the book
      allow write: if request.auth.uid in firestore.get(/databases/(default)/documents/books/$(bookID)).data.uids
    }
  }
}
