            "default": "./package/components/page/Print.svelte"
        },
        "./References.svelte": {
            "types": "./package/components/page/References.svelte.d.ts",
            "svelte": "./package/components/page/References.svelte",
            "default": "./package/components/page/References.svelte"
        },
        "./Search.svelte": {
            "types": "./package/components/page/Search.svelte.d.ts",
            "svelte": "./package/components/page/Search.svelte",
            "default": "./package/components/page/Search.svelte"
        },
        "./Schema": {
            "types": "./package/models/book/Schema.d.ts",
            "default": "./package/models/book/Schema.js"
        }
    },
    "files": [
        "package"
    ],
    "svelte": "./package/index.js"
}
