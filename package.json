{
	"name": "bookish",
	"version": "0.7.0",
	"description": "A simple platform for creating readable, accessible online books.",
	"license": "MIT",
	"repository": "https://github.com/amyjko/bookish.git",
	"scripts": {
		"postinstall": "mkdir public/",
		"book": "sh scripts/book.sh",
		"build-clean": "rm -r public/*",
		"build-examples": "cp -r examples public/",
		"build-assets": "cp src/style/* public/; cp -r src/images public/; cp src/index.html public/",
		"build-scripts-dev": "node ./esbuild.js dev",
		"build-scripts-prod": "node ./esbuild.js prod; terser public/bookish.js -m -c -o public/bookish.js; terser public/app.js -m -c -o public/app.js;",
		"build-typecheck": "tsc",
		"build-dev": "npm run build-clean; npm run build-scripts-dev; npm run build-assets; npm run build-examples; npm run build-typecheck; npm run test",
		"build-prod": "npm run build-clean; npm run build-assets; npm run build-scripts-prod",
		"deploy": "npm run build-prod; firebase deploy",
		"test": "jest --colors",
		"emu": "firebase emulators:start",
		"watch": "watch --color=always 'npm run build-dev' ./src"
	},
	"devDependencies": {
		"@babel/core": "^7.16.7",
		"@babel/preset-env": "^7.16.8",
		"@babel/preset-typescript": "^7.16.7",
		"@types/jest": "^27.4.0",
		"@types/react-dom": "^17.0.11",
		"@types/smoothscroll-polyfill": "^0.3.1",
		"@types/uuid": "^8.3.4",
		"dotenv": "^10.0.0",
		"esbuild": "^0.14.11",
		"esbuild-plugin-svgr": "^1.0.0",
		"http-server": "^14.0.0",
		"jest": "^27.4.7",
		"npm": "^7.20.6",
		"terser": "^5.3.4",
		"typescript": "^4.5.4",
		"watch": "^0.13.0"
	},
	"dependencies": {
		"ajv": "^8.8.2",
		"ajv-formats": "^2.1.1",
		"firebase": "^9.9.4",
		"highlight.js": "11.1.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router": "^6.2.1",
		"react-router-dom": "^6.2.1",
		"react-router-hash-link": "^2.4.3",
		"react-select": "^5.3.0",
		"save": "^2.5.0",
		"smoothscroll-polyfill": "^0.4.4",
		"uuid": "^9.0.0"
	}
}
