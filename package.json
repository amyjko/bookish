{
    "name": "bookish-press",
    "private": false,
    "version": "0.5.11",
    "type": "module",
    "description": "A platform for reading and writing readable, accessible, beautiful online books.",
    "license": "MIT",
    "repository": "https://github.com/amyjko/bookish.git",
    "scripts": {
        "prepare": "svelte-kit sync",
        "//dev": "echo 'Run the Svelte/Vite local server to test locally. Use in combination with run emu to run locally.'",
        "dev": "vite dev",
        "preview": "npm run build && vite preview",
        "build": "npm run env && vite build",
        "//emu": "echo 'This copies the local .env file and starts the emulator'",
        "emu": "firebase use dev && npm run env && firebase emulators:start",
        "package": "svelte-package -o package --watch",
        "test": "vitest",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "//env": "echo 'This copies the .env file corresponding to the current Firebase project specified with firebase use, defaulting to local'",
        "env": "cp .env.${GCLOUD_PROJECT:-example} .env",
        "//stage": "echo 'switch to the dev project, deploy, relying on Firebase's predeploy hook to run the build script above before release'",
        "stage": "firebase use dev && firebase deploy",
        "//release": "echo 'switch to the prod project, deploy, relying on Firebase's predeploy hook to run the build script above before release'",
        "release": "firebase use prod && firebase deploy"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^2.0.1",
        "@sveltejs/kit": "^1.7.2",
        "@sveltejs/package": "^2.0.0",
        "@types/prismjs": "^1.26.0",
        "@types/smoothscroll-polyfill": "^0.3.1",
        "@types/uuid": "^9.0.0",
        "prettier": "^2.8.4",
        "prettier-plugin-svelte": "^2.9.0",
        "svelte-adapter-firebase": "^0.15.0",
        "svelte-check": "^3.0.3",
        "svelte-preprocess": "^5.0.1",
        "tslib": "^2.5.0",
        "typescript": "^4.9.5",
        "vite": "^4.1.2",
        "vitest": "^0.28.5"
    },
    "dependencies": {
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "firebase": "latest",
        "firebase-functions": "^4.2.1",
        "prismjs": "^1.29.0",
        "smoothscroll-polyfill": "^0.4.4",
        "svelte": "^3.55.1",
        "@sveltejs/kit": "^1.7.2",
        "uuid": "^9.0.0"
    },
    "types": "./src/lib/index.d.ts",
    "exports": {
        ".": {
            "types": "./package/index.d.ts",
            "svelte": "./package/index.js"
        },
        "./Chapter": {
            "types": "./package/models/book/Chapter.d.ts",
            "default": "./package/models/book/Chapter.js"
        },
        "./Edition": {
            "types": "./package/models/book/Edition.d.ts",
            "default": "./package/models/book/Edition.js"
        },
        "./Contexts": {
            "types": "./package/components/page/Contexts.d.ts",
            "default": "./package/components/page/Contexts.js"
        },
        "./Edition.svelte": {
            "types": "./package/components/page/Edition.svelte.d.ts",
            "svelte": "./package/components/page/Edition.svelte",
            "default": "./package/components/page/Edition.svelte"
        },
        "./Chapter.svelte": {
            "types": "./package/components/page/Chapter.svelte.d.ts",
            "svelte": "./package/components/page/Chapter.svelte",
            "default": "./package/components/page/Chapter.svelte"
        },
        "./TableOfContents.svelte": {
            "types": "./package/components/page/TableOfContents.svelte.d.ts",
            "svelte": "./package/components/page/TableOfContents.svelte",
            "default": "./package/components/page/TableOfContents.svelte"
        },
        "./Glossary.svelte": {
            "types": "./package/components/page/Glossary.svelte.d.ts",
            "svelte": "./package/components/page/Glossary.svelte",
            "default": "./package/components/page/Glossary.svelte"
        },
        "./Index.svelte": {
            "types": "./package/components/page/Index.svelte.d.ts",
            "svelte": "./package/components/page/Index.svelte",
            "default": "./package/components/page/Index.svelte"
        },
        "./Unknown.svelte": {
            "types": "./package/components/page/Unknown.svelte.d.ts",
            "svelte": "./package/components/page/Unknown.svelte",
            "default": "./package/components/page/Unknown.svelte"
        },
        "./Media.svelte": {
            "types": "./package/components/page/Media.svelte.d.ts",
            "svelte": "./package/components/page/Media.svelte",
            "default": "./package/components/page/Media.svelte"
        },
        "./Print.svelte": {
            "types": "./package/components/page/Print.svelte.d.ts",
