{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "storage": {
        "rules": "storage.rules"
    },
    "functions": {
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ],
        "source": "functions"
    },
    "hosting": {
        "source": ".",
        "predeploy": ["npm run build"],
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/book/**",
                "function": "getEdition"
            }
        ],
        "frameworksBackend": {
            "region": "us-central1"
        }
    },
    "emulators": {
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 8000
        },
        "auth": {
            "port": 9099
        },
        "storage": {
            "port": 9199
        }
    }
}
