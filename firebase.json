{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/examples/tutorial/**",
                "destination": "/examples/tutorial/index.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 8000
        },
        "auth": {
            "port": 9099
        },
        "storage": {
            "port": 9199
        }
    },
    "storage": {
        "rules": "storage.rules"
    },
    "functions": {
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ]
    }
}
